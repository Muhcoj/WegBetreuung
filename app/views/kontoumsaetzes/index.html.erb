<h1>Kontoumsätze</h1>

<table class="table table-striped table-hover table-details">
  <thead>
    <tr>
      <th>Weg</th>
      <th>Wertstellung</th>
      <th>Umsatzart</th>
      <th>Buchungsdetails</th>
      <th>Auftraggeber</th>
      <th>Empfänger</th>
      <th>Betrag</th>
      <th>Saldo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kontoumsaetzes.each do |kontoumsaetze| %>
      <tr>
        <td><%= kontoumsaetze.weg %></td>
        <td><%= kontoumsaetze.wertstellung %></td>
        <td><%= kontoumsaetze.umsatzart %></td>
        <td><%= kontoumsaetze.buchungsdetails.truncate(15) %></td>
        <td><%= kontoumsaetze.auftraggeber.truncate(15) %></td>
        <td><%= kontoumsaetze.empfaenger.truncate(15) %></td>
        <td><%= kontoumsaetze.betrag %></td>
        <td><%= kontoumsaetze.saldo %></td>
        <td><%= link_to 'Zeigen', kontoumsaetze %></td>
        <td><%#= link_to 'Edit', edit_kontoumsatz_path(kontoumsaetze) %></td>
        <td><%#= link_to 'Destroy', kontoumsaetze, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>