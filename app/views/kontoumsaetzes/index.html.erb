<div style="padding-top: 50px;">

  <table class="table table-striped table-hover table-details">
    <thead>
      <tr>
        <th>Bewohner</th>
        <th><%= sortable "weg", "WEG" %></th>
        <th><%= sortable "wertstellung", "Wertstellung" %></th>
        <th><%= sortable "umsatzart", "Umsatzart" %></th>
        <th><%= sortable "buchungsdetails", "Buchunsdetails" %></th>
        <th><%= sortable "auftraggeber", "Auftraggeber" %></th>
        <th><%= sortable "empfaenger", "EmpfÃ¤nger" %></th>
        <th><%= sortable "betrag", "Betrag" %></th>
        <th><%= sortable "saldo", "Saldo" %></th>
      </tr>
    </thead>

    <tbody >
      <%= render @kontoumsaetzes %>
    </tbody>
  
  </table>

  <div>
    <%= paginate @kontoumsaetzes %>
  </div>


  <% if current_user.try(:type) == 'AdminUser' %>
    <%= link_to "Export", kontoumsaetzes_path(format: "xlsx"), style: "float: right;" %>

    <%= form_tag import_kontoumsaetzes_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import Datei", class: 'btn btn-primary', style: "margin-top: 5px;" %>
    <% end %>

  <% end %>
</div>