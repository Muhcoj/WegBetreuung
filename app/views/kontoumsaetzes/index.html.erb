<h1>Kontoumsätze</h1>

<h3>Import</h3>
<%= form_tag import_kontoumsaetzes_path, multipart: true do %>
  <%= file_field_tag :file %>
  <br>
  <%= submit_tag "Import Datei" %>
<% end %>
<br>
<%= link_to "Export", kontoumsaetzes_path(format: "xlsx") %>

<table class="table table-striped table-hover table-details">
  <thead>
    <tr>
      <th>Weg</th>
      <th>Wertstellung</th>
      <th>Umsatzart</th>
      <th>Buchungsdetails</th>
      <th>Auftraggeber</th>
      <th>Empfänger</th>
      <th>Betrag</th>
      <th>Saldo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
    <%= render @kontoumsaetzes %>
  </tbody>
</table>